<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <LangVersion>9.0</LangVersion>
        <Nullable>enable</Nullable>
        <RootNamespace>DFrame</RootNamespace>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>

        <!-- NuGet -->
        <PackageId>DFrame</PackageId>
        <Description>Kubernetes based Micro Distributed Batch Framework and Load Testing Library for C#.</Description>
    </PropertyGroup>

    <PropertyGroup>
        <NoWarn>1701;1702;1591</NoWarn>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="MagicOnion" Version="4.1.0" />
        <PackageReference Include="ConsoleAppFramework" Version="3.2.0" />
        <PackageReference Include="ZLogger" Version="1.3.0" />
    </ItemGroup>

    <ItemGroup>
        <None Include="Icon.png" Pack="true" PackagePath="/" />
    </ItemGroup>
    
</Project>
