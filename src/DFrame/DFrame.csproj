<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <LangVersion>8.0</LangVersion>
        <Nullable>enable</Nullable>
        <RootNamespace>DFrame</RootNamespace>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>

        <!-- NuGet -->
        <PackageId>DFrame</PackageId>
        <Description>Kubernetes based Micro Distributed Batch Framework and Load Testing Library for C#.</Description>
    </PropertyGroup>

    <PropertyGroup>
        <NoWarn>1701;1702;1591</NoWarn>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="MagicOnion" Version="3.0.13" />
        <PackageReference Include="MagicOnion.Hosting" Version="3.0.13" />
        <PackageReference Include="ConsoleAppFramework" Version="2.4.0" />
        <PackageReference Include="System.Collections.Immutable" Version="1.7.1" />
        <PackageReference Include="ZLogger" Version="1.2.1" />
    </ItemGroup>

    <ItemGroup>
        <None Include="Icon.png" Pack="true" PackagePath="/" />
    </ItemGroup>
    
</Project>
