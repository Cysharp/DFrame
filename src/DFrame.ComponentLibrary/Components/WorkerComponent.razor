<div>
    @if (Workers == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <p>Running @Workers.Length workers.</p>

        <table class="table">
            <thead>
                <tr>
                    <th>Worker</th>
                    <th>State</th>
                    <th># users</th>
                    <th>CPU usage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var worker in Workers)
                {
                    <tr>
                        <td>@worker.Name</td>
                        <td>@worker.State</td>
                        <td>@worker.Users</td>
                        <td>@worker.Cpu.ToString("0.0")%</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    [Parameter] public WorkerData[] Workers { get; set; }
}
